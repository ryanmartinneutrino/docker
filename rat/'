FROM ubuntu:14.04

MAINTAINER Ryan Martin

USER root


#Update
RUN apt-get update


#Install prerequisites according to https://root.cern.ch/build-prerequisites:
RUN apt-get install -y --fix-missing git\
    dpkg-dev\
    make\
    g++\
    gcc\
    build-essentials\
    binutils\
    libx11-dev\ 
    libxpm-dev \
    libxft-dev\
    libxext-dev\
    gfortran\ 
    libssl-dev\
    libpcre3-dev \
    xlibmesa-glu-dev\
    libglew1.5-dev\
    libmysqlclient-dev\
    libfftw3-dev\
    graphviz-dev\
    libavahi-compat-libdnssd-dev \
    libldap2-dev\
    python-dev\
    libxml2-dev\
    libkrb5-dev \
    libgsl0-dev\
    libqt4-dev

#Not found in repositories: cfitsio-dev libftgl-dev 

#Some extra stuff that should probably be above:
RUN apt-get install -y --fix-missing cmake\
  curl\
  cernlib\
 



#Build ROOT using CMAKE:
#Put source into /usr/local/src/root and build in /usr/local/root
#Download from git

WORKDIR /usr/local/src/
RUN git clone http://root.cern.ch/git/root.git\
    && cd root\
    && git checkout -b v5-34-36 v5-34-36 \
    && mkdir /usr/local/root

#Configure ROOT for the build
WORKDIR /usr/local/root
RUN cmake -Dhttp:BOOL=ON \
          -Dpython:BOOL=ON \
          -Dminuit2:BOOL=ON \
    /usr/local/src/root




#Build and install
RUN cmake --build . --target install

